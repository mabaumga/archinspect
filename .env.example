# Django Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Localization
TIME_ZONE=Europe/Berlin
LANGUAGE_CODE=de

# Logging
LOG_LEVEL=INFO
LOG_JSON=False

# Repository Download Settings
REPO_DOWNLOAD_ROOT=/data/repos
CORPUS_OUTPUT_DIR=/data/corpus
INCLUDE_PATTERNS=*.py,*.md,*.txt,*.js,*.ts,*.tsx,*.jsx,*.java,*.kt,*.go,*.yml,*.yaml,*.json
EXCLUDE_PATHS=.git,node_modules,dist,build,target,venv,.venv,__pycache__
MAX_CONCAT_BYTES=460800

# Source Code Repository Adapter
# Options: "mock" or "gitlab"
REPOSITORY_ADAPTER=mock

# GitLab Configuration (only needed if REPOSITORY_ADAPTER=gitlab)
GITLAB_URL=https://gitlab.example.com
GITLAB_ACCESS_TOKEN=your-gitlab-token-here
GITLAB_SSL_VERIFY=true

# Backup Configuration
BACKUP_DIR=/data/backups
