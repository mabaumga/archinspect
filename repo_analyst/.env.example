# Django
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://repo_analyst:password@localhost:5432/repo_analyst
# For development with SQLite:
# DATABASE_URL=sqlite:///db.sqlite3

# Locale
TIME_ZONE=Europe/Berlin
LANGUAGE_CODE=de

# Logging
LOG_LEVEL=INFO
LOG_JSON=1

# Repository Settings
REPO_DOWNLOAD_ROOT=/data/repos
INCLUDE_PATTERNS=*.py,*.md,*.txt,*.js,*.ts,*.tsx,*.jsx,*.java,*.kt,*.go,*.yml,*.yaml,*.json
EXCLUDE_PATHS=.git,node_modules,dist,build,target,venv,.venv,__pycache__
MAX_CONCAT_BYTES=460800

# KI Provider Tokens (examples)
OPENAI_API_KEY=sk-...
AZURE_OPENAI_KEY=...
ANTHROPIC_API_KEY=...
